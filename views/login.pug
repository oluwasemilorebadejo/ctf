doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='Authentication System by DOH')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='manifest', href='manifest.webmanifest')
    link(rel='preconnect', href='https://fonts.googleapis.com')
    link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&display=swap', rel='stylesheet')
    link(rel='stylesheet', href='/css/style-login.css')
    script(type='module', src='https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js')
    script(nomodule='', src='https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js')
    title DOH Challenge | #{title}
    link(rel="icon" type="image/png" href="data:;base64,iVBORw0KGgo")
    
    // Super dev account created last week with password test1234
    // Hi super dev, please change this password its quite insecure"-  Superduper Dev

    //- title Authentication System || Login now
  body
    header.header
      .logo
        //- img(src='/public/img/blac-logo.png', alt='Logo')
    main
      h2.heading--2 Welcome Back
      p.cred-message Enter your credentials to access this account.
      .form--container
        form.form--login
          .form--group
            //- label.form--label(for='email') Email
            i.form-control-icon
              ion-icon(name='mail-outline')
            input#email.form--input(type='email', placeholder='Enter your email', name='email', required='')
          .form--group.zmb
            //- label.form--label(for='password') Password
            i.form-control-icon
              ion-icon(name='lock-closed-outline')
            input#password.form--input(type='password', name='password', placeholder='Enter your password', minlength='8', required='')
          .form--group.btn--container
            button.btn.no-wrap Sign In
      p.forgot-password
        | Forgot your password?
        a.link(href='#')
          span(style='color: #74c0fc') Reset Password
      p.or or
      p.sign-up
        | Dont have an account?
        a.link(href='/signup')
          span(style='color: #339af0') Sign up now
    footer.footer
      .logo.logo--footer
        //- img(src='/public/img/blac-logo.png', alt='Logo')
      .copyright
        p Copyright &copy; 2023. All rights reserved.
      .socials--container
        ul.socials
          li
            a.footer-link(href='#')
              ion-icon(name='logo-twitter')
          li
            a.footer-link(href='#')
              ion-icon(name='logo-github')
          li
            a.footer-link(href='#')
              ion-icon(name='logo-linkedin')
    script(src="/js/bundle.js")   